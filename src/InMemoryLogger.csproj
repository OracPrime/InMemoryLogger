<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Microsoft.Extensions.Logging compatible logger for recording log messages during tests</Description>
    <PackageTags>Microsoft.Extensions.Logging test unittest</PackageTags>
    <Authors>Christian Horsdal</Authors>
    <Copyright>Christian Horsdal</Copyright>
    <PackageProjectUrl>https://github.com/horsdal/InMemoryLogger</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageId>InMemoryLogger</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
  </ItemGroup>

</Project>
